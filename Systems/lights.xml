<?xml version="1.0"?>
<PropertyList>

<!-- Lights Multiplayer System -->

<!-- Beacon light -->
    <logic>
        <name>Beacon light</name>
         <input>
			<condition>
				<and>
					<property>sim/model/lights/beacon/state</property>
					<property>controls/lighting/beacon</property>
		    		<not>
						<property>sim/crashed</property>
		    		</not>
					<greater-than>
						<property>systems/electrical/bus-volts</property>
						<value>24.0</value>
					</greater-than>
				</and>
			</condition>
				<value>8</value>
        </input>
        <input>
			<value>0</value>
        </input>
        <output>sim/multiplay/generic/foo</output>
    </logic>

    <filter>
        <name>Beacon lights</name>
        <type>gain</type>
        <gain>1.0</gain>
		<input>
			<condition>
				<and>
					<property>sim/model/lights/beacon/state</property>
					<property>controls/lighting/beacon</property>
		    		<not>
						<property>sim/crashed</property>
		    		</not>
					<greater-than>
						<property>systems/electrical/bus-volts</property>
						<value>24.0</value>
					</greater-than>
				</and>
			</condition>
				<value>8</value>
        </input>
        <!-- default input -->
        <input>
			<value>0</value>
        </input>
        <output>sim/multiplay/generic/int[1]</output>
    </filter>
        
</PropertyList>