<?xml version="1.0"?>
<PropertyList>
  <name>Boeing 747-400 malfunctions</name>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
	
	<text>
		<label>Malfunctions</label>
	</text>
  
    <empty>
      <stretch>true</stretch>
    </empty>

    <button>
      <legend/>
      <key>Esc</key>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>
	
  <text>
    <label>Engine fire</label>
  </text>
  
  <group>
    <stretch>true</stretch>
    <layout>table</layout>
  
		<checkbox>
		  <row>0</row><col>0</col>
		  <halign>left</halign>
		  <property>/controls/engines/engine[0]/on-fire</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[0]/on-fire</property>
		  </binding>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[0]/cutoff</property>
		  </binding>
		</checkbox>

		<checkbox>
		  <row>0</row><col>1</col>
		  <halign>left</halign>
		  <property>/controls/engines/engine[1]/on-fire</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[1]/on-fire</property>
		  </binding>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[1]/cutoff</property>
		  </binding>
		</checkbox>

		<checkbox>
		  <row>0</row><col>2</col>
		  <halign>left</halign>
		  <property>/controls/engines/engine[2]/on-fire</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[2]/on-fire</property>
		  </binding>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[2]/cutoff</property>
		  </binding>
		</checkbox>

		<checkbox>
		  <row>0</row><col>3</col>
		  <halign>left</halign>
		  <property>/controls/engines/engine[3]/on-fire</property>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[3]/on-fire</property>
		  </binding>
		  <binding>
			<command>property-toggle</command>
			<property>/controls/engines/engine[3]/cutoff</property>
		  </binding>
		</checkbox>

	</group>

</PropertyList>
