    </checkbox>
  </group>
  <group>
    <layout>hbox</layout>
    <halign>center</halign>
    <button>
      <halign>center</halign>
      <legend>Quick Balance</legend>
      <enable>
	<greater-than>
	    <property>consumables/fuel/total-fuel-lbs</property>
	    <value>4500</value>
	</greater-than>
      </enable>
      <binding>
	<command>nasal</command>
	<script>Boeing747.startup_dist();</script>
      </binding>
    </button>
  </group>

  <group>
    <layout>hbox</layout>
    <halign>center</halign>

    <text>
	<label>See $FG_ROOT/Aircraft/747-8i/about_fuelsystem.txt</label>
    </text>
  </group>

  <hrule/>

  <text>
	<label>Pneumatic System</label>
  </text>
  <group>
    <layout>hbox</layout>
    <halign>center</halign>

    <checkbox>
      <halign>center</halign>
      <label>Ground Air Service</label>
      <enable>
	<greater-than>
	  <property>systems/electrical/external-power</property>
	  <value>0</value>
	</greater-than>
      </enable>
      <property>systems/pneumatic/air-service</property>
      <binding>
        <command>property-toggle</command>
        <property>systems/pneumatic/air-service</property>
      </binding>
      <live>1</live>
    </checkbox>
  </group>

