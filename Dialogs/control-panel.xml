<?xml version="1.0"?>
<PropertyList>

  <name>controlpanel</name>
  <layout>vbox</layout>
  
<!-- Header -->
  <group>
    <layout>hbox</layout>
    <text>
      <label>Control Panel</label>
    </text>

    <empty>
      <stretch>true</stretch>
    </empty>

    <button>
      <legend/>
      <key>Esc</key>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

<!-- Fuel Order -->
  <text>
	<label>Fuel Management</label>
  </text>
  <group>
    <layout>hbox</layout>
      <text>
	<label>Target (lbs)</label>
      </text>
      <!--empty>
        <stretch>true</stretch>
      </empty>
      <text>
	<label>Target (US gal)</label>
      </text>
  </group>
    <group>
      <layout>hbox</layout>
      <halign>center</halign-->
      <input>
	<halign>left</halign>
	<pref-width>150</pref-width>
	<pref-height>25</pref-height>
	<enable>
	    <and>
		<property>gear/gear/wow</property>
		<property>controls/gear/brake-parking</property>
		<not>
		   <property>controls/groundservice/fueling/loading</property>
		</not>
	    </and>
	</enable>
	<property>controls/groundservice/fueling/target-lbs</property>
	<binding>
	    <command>dialog-apply</command>
	</binding>
	<live>1</live>
      </input>
      <!--input>
	<halign>right</halign>
	<pref-width>150</pref-width>
	<pref-height>25</pref-height>
	<enable>
