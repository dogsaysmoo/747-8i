<?xml version="1.0"?>
 
<PropertyList>

<fx>

	<!-- Avionics Hum -->
	
	<avhum>
		<path>Aircraft/747-8i/Sounds/FGOS_Avionics.wav</path>
		<mode>looped</mode>
		<type>avionics</type>
	</avhum>

	<!-- Engine #1	-->
	
	<engine>
		<name>engine1</name>
		<path>Aircraft/747-8i/Sounds/jet-trent2.wav</path>
		<mode>looped</mode>
		<condition>
			<property>engines/engine/running</property>
		</condition>
		<position>
			<x>-30.0</x>
			<y>40.0</y>
			<z>0.0</z>
		</position>
		<volume>
			<!--property>/engines/engine/n1-ind</property>
			<factor type="double">0.005</factor>
			<offset type="double">0.025</offset-->
			<property>/engines/engine/rpm</property>
			<factor type="double">0.0125</factor>
			<offset type="double">-0.75</offset>
			<min>0.0</min>
			<max>5.0</max>
		</volume>
		<reference-dist>600.0</reference-dist>
		<max-dist>6000.0</max-dist>
		<!--pitch>
			<property>/engines/engine/n1-ind</property>
			<type>log</type>
			<factor>0.5</factor>
			<offset>0.65</offset>
		</pitch-->
	</engine>
	<engine>
		<name>engine1 n1</name>
		<path>Aircraft/747-8i/Sounds/jet-trent1.wav</path>
		<mode>looped</mode>
		<property>engines/engine/rpm</property>
		<position>
			<x>-30.0</x>
			<y>40.0</y>
			<z>0.0</z>
		</position>
		<pitch>
			<property>/engines/engine/rpm</property>
			<factor>0.01</factor>
			<offset>0.8</offset>
			<min>0.0</min>
			<max>100.0</max>
		</pitch>
		<volume>
			<property>/engines/engine/rpm</property>
			<factor type="double">0.1</factor>
			<min>0.0</min>
			<max>0.5</max>
		</volume>
		<volume>
			<property>sim/sound/Ovolume</property>
		</volume>
		<reference-dist>600.0</reference-dist>
		<max-dist>6000.0</max-dist>
	</engine>
	<reverser>
		<name>engine1rev</name>
		<path>Aircraft/747-8i/Sounds/reverser.wav</path>
		<mode>looped</mode>
		<condition>
			<property>engines/engine[0]/running</property>
		</condition>
		<position>
                        <x>-30.0</x>
                        <y>40.0</y>
                        <z>0.0</z>
                </position>
                <volume>
                        <property>/engines/engine/n1-ind</property>
                        <factor type="double">0.005</factor>
                        <offset type="double">-0.025</offset>
                </volume>
		<volume>
			<property>sim/multiplay/generic/float[6]</property>
		</volume>
		<reference-dist>600.0</reference-dist>
		<max-dist>6000.0</max-dist>
	</reverser>

