		<mode>looped</mode>
		<condition>
			<property>engines/engine[2]/running</property>
		</condition>
		<position>
                        <x>-30.0</x>
                        <y>-20.0</y>
                        <z>0.0</z>
                </position>
                <volume>
                        <property>/engines/engine[2]/n1-ind</property>
                        <factor type="double">0.005</factor>
                        <offset type="double">-0.025</offset>
