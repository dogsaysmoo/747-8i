	<!-- Flaps -->
	
	<flap>
		<name>flaps</name>
		<mode>in-transit</mode>
		<path>Aircraft/747-8i/Sounds/FGOS_FlapXtndWClick.wav</path>
		<!--path>Aircraft/747-8i/Sounds/Flaps.wav</path-->
		<property>/surface-positions/flap-pos-norm</property>
		<volume>
			<factor>0.7</factor>
		</volume>
		<pitch>
			<!--factor>1.0</factor-->
			<offset>3</offset>
		</pitch>
	</flap>

	<stall>
		<name>stall</name>
		<path>Sounds/stall.wav</path>
		<condition>
			<property>/sim/alarms/stall-warning</property>
		</condition>
		<volume>
			<property>/velocities/airspeed-kt</property>
			<min>30.0</min>
		</volume>
	</stall>

	<!-- Warnings -->
	
	<config-flaps>
		<name>config-flaps</name>
		<mode>looped</mode>
		<path>Aircraft/747-8i/Sounds/FGOS_Configuration_Warn.wav</path>
		<condition>
			<and>
				<equals>
					<property>/gear/gear[0]/wow</property>
					<value>1</value>
				</equals>
				<less-than>
					<property>/surface-positions/flap-pos-norm</property>
					<value>0.33</value>
				</less-than>
				<greater-than>
					<property>/controls/engines/engine[1]/throttle</property>
					<value>0.5</value>
				</greater-than>
				<greater-than>
					<property>/controls/engines/engine[2]/throttle</property>
					<value>0.5</value>
				</greater-than>
			</and>
		</condition>
	</config-flaps>
	
	<config-park-brk>
		<name>config-park-brk</name>
		<mode>looped</mode>
		<path>Aircraft/747-8i/Sounds/FGOS_Configuration_Warn.wav</path>
		<condition>
			<and>
				<equals>
					<property>/controls/gear/brake-parking</property>
					<value>1</value>
				</equals>
				<greater-than>
					<property>/controls/engines/engine[1]/throttle</property>
					<value>0.5</value>
				</greater-than>
				<greater-than>
					<property>/controls/engines/engine[2]/throttle</property>
					<value>0.5</value>
				</greater-than>
			</and>
		</condition>
	</config-park-brk>
	
	<overspeed>
		<name>overspeed</name>
		<mode>looped</mode>
		<path>Sounds/gear-hrn.wav</path>
		<condition>
		    <or>
			<greater-than>
				<property>/velocities/mach</property>
				<value>0.9</value>
			</greater-than>
			<greater-than>
				<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
				<value>365</value>
			</greater-than>
		    </or>
		</condition>
	</overspeed>
	
	<!-- Additions -->
	<switch>
		<name>seatbelt-sign</name>
		<mode>once</mode>
		<path>Aircraft/747-8i/Sounds/FastenSeatbelt.wav</path>
		<condition>
			<property>controls/switches/seatbelt-sign</property>
		</condition>
		<volume>
			<factor>0.6</factor>
		</volume>
	</switch>
	
	<switch>
		<name>seatbelt-sign-off</name>
		<mode>once</mode>
		<path>Aircraft/747-8i/Sounds/FastenSeatbelt.wav</path>
		<condition>
			<not>
			<property>controls/switches/seatbelt-sign</property>
			</not>
		</condition>
		<volume>
			<factor>0.6</factor>
		</volume>
	</switch>
	
	<switch>
		<name>switch</name>
		<mode>once</mode>
		<path>Sounds/click.wav</path>
		<condition>
			<property>sim/sound/click</property>
		</condition>
		<volume>
			<factor>1</factor>
		</volume>
	</switch>

	<!-- Gear touchdown -->
                <gear>
                        <name>Left main gear touchdown</name>
                        <path>Aircraft/747-8i/Sounds/touchdown.wav</path>
                        <mode>once</mode>
                        <condition>
                                <property>gear/gear[2]/wow</property>
                        </condition>
                        <volume>
                                <offset>-0.75</offset>
                        </volume>
                </gear>
                <gear>
                        <name>Right main gear touchdown</name>
                        <path>Aircraft/747-8i/Sounds/touchdown.wav</path>
                        <mode>once</mode>
                        <condition>
                                <property>gear/gear[3]/wow</property>
                        </condition>
                        <volume>
                                <offset>-0.75</offset>
                        </volume>
                </gear>

    <apdisengage>
        <name>autopilot disengage</name>
        <mode>once</mode>
        <type>avionics</type>
        <path>Aircraft/747-8i/Sounds/autopilot-disengage.wav</path>
        <condition>
            <!--property>instrumentation/weu/sound/autopilot-warning</property-->
            <property>instrumentation/afds/settings/alarm</property>
        </condition>
        <volume>
            <factor>1</factor>
        </volume>
    </apdisengage>

<gear1>
        <name>gear</name>
        <mode>in-transit</mode>
        <!--mode>once</mode-->
        <!--path>Sounds/gear.wav</path-->
	<path>Aircraft/747-8i/Sounds/gear.wav</path>
        <property>gear/gear[0]/position-norm</property>
        <volume>0.30</volume>
        <pitch>
            <internal>dt_play</internal>
            <offset>0.7</offset>
            <factor>-0.001</factor>
        </pitch>
        <position>
            <x>-22</x>
            <y>0</y>
            <z>-2</z>
        </position>
    </gear1>

    <gearlock>
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </equals>
        </condition>
        <volume>0.2</volume>
        <position>
            <x>-22</x>
            <y>0</y>
            <z>-2</z>
        </position>
    </gearlock>
    
    
    <!-- APU sounds -->
                <apu-start>
                        <name>apu-strt</name>
                        <mode>once</mode>
                        <path>Aircraft/747-8i/Sounds/apu_strt.wav</path>
                        <condition>
			    <and>
                                <equals>
                                        <property>/controls/electric/apu</property>
                                        <value>2</value>
                                </equals>
                                <equals>
                                        <property>/engines/apu/running</property>
                                        <value>0</value>
                                </equals>
			    </and>
                        </condition>
                        <position>
                                <x>42.218</x>
                                <y>0</y>
                                <z>1.256</z>
                        </position>
                        <volume>0.7</volume>
                </apu-start>
                
                <apu-running>
                        <name>apu-run</name>
                        <mode>looped</mode>
                        <path>Aircraft/747-8i/Sounds/apu_run.wav</path>
                        <condition>
                                <greater-than>
                                	<property>/engines/apu/rpm</property>
                                	<value>5000.0</value>
                                </greater-than>
                        </condition>
                        <position>
                                <x>42.218</x>
                                <y>0</y>
                                <z>1.256</z>
                        </position>
                        <volume>0.5</volume>
                </apu-running>
                
                <apu-shutdown>
                        <name>apu-stop</name>
                        <mode>once</mode>
                        <path>Aircraft/747-8i/Sounds/apu_stop.wav</path>
                        <condition>
			   <and>
                        	<greater-than>
                                        <property>/engines/apu/rpm</property>
                                        <value>5000.0</value>
                                </greater-than>
                                <equals>
                                        <property>/controls/electric/apu</property>
                                        <value>0</value>
                                </equals>
                                <!--equals>
                                	<property>/engines/apu/running</property>
                                	<value>0</value>
                                </equals-->
			   </and>
                        </condition>
                        <position>
                                <x>42.218</x>
                                <y>0</y>
                                <z>1.256</z>
                        </position>
                        <volume>0.5</volume>
                </apu-shutdown>

</fx>
 
</PropertyList>
