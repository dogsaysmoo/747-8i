                    <property>systems/electrical/outputs/efis</property>
                    <value>15</value>
                </greater-than>
                <greater-than-equals>
                    <property>/controls/electric/APU-button</property>
                    <value>0</value>
                </greater-than-equals>
			</condition>			
            <texture>
                <path>Aircraft/747-8i/Models/Cockpit/Instruments/MFD/fuel_APU.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
        </layer>		
		
