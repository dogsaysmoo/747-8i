<?xml version="1.0"?>


<PropertyList>
    <name>fuel-info</name>
    <w-base>364</w-base>
    <h-base>400</h-base>

    <layers>
        <layer>
            <name>fuel</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
            <texture>
                <path>Aircraft/747-8i/Models/Cockpit/Instruments/MFD/fuel.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
        </layer>
		
        <layer>
            <name>fuel_val0</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
			<condition>
