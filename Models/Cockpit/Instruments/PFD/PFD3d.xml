<PropertyList>

 <path>PFD3d.ac</path>
 
    <animation>
        <type>select</type>
        <object-name>Power.off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>locscale</object-name>
        <condition>
            <property>instrumentation/nav/nav-loc</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>locpointer</object-name>
        <condition>
            <and>
                <property>instrumentation/nav/in-range</property>
                <property>instrumentation/nav/nav-loc</property>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>gsscale</object-name>
        <condition>
            <property>instrumentation/nav/has-gs</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>gspointer</object-name>
        <condition>
            <and>
                <property>instrumentation/nav/gs-in-range</property>
                <property>instrumentation/nav/has-gs</property>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Imarker</object-name>
        <condition>
            <property>instrumentation/marker-beacon/inner</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Mmarker</object-name>
        <condition>
            <property>instrumentation/marker-beacon/middle</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Omarker</object-name>
        <condition>
                <property>instrumentation/marker-beacon/outer</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>FDroll</object-name>
        <object-name>FDpitch</object-name>
        <condition>
                <property>instrumentation/afds/inputs/FD</property>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDpitch</object-name>
        <property>autopilot/internal/target-pitch-deg</property>
        <factor>0.00168</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDpitch</object-name>
        <property>orientation/pitch-deg</property>
        <factor>0.00168</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDroll</object-name>
        <property>autopilot/internal/target-roll-deg</property>
        <factor>0.001</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDroll</object-name>
        <property>orientation/roll-deg</property>
        <factor>0.001</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>gspointer</object-name>
        <property>instrumentation/nav/gs-needle-deflection-norm</property>
        <factor>0.0272</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <object-name>StallSpeedInd</object-name>
        <property>instrumentation/pfd/stallspeed-diff</property>
        <type>translate</type>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <factor>0.000646</factor>
    </animation>
    <animation>
        <type>select</type>
        <object-name>StallSpeedInd</object-name>
        <condition>
            <greater-than>
                <property>velocities/airspeed-kt</property>
                <value>40</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <object-name>OverSpeedInd</object-name>
        <property>instrumentation/pfd/overspeed-diff</property>
        <type>textranslate</type>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
        <factor>0.0013</factor>
    </animation>

    <animation>	
        <type>translate</type>
        <object-name>locpointer</object-name>
        <property>instrumentation/nav/heading-needle-deflection-norm</property>
        <factor>-0.0272</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>VSI.needle</object-name>
        <property>velocities/vertical-speed-fps</property>
        <interpolation>
            <entry><ind>-100</ind><dep>-0.0385</dep></entry>
            <entry><ind>-33.3333</ind><dep>-0.0265</dep></entry>
            <entry><ind>-16.6666</ind><dep>-0.0147</dep></entry>
            <entry><ind>16.6666</ind><dep>0.0147</dep></entry>
            <entry><ind>33.3333</ind><dep>0.0265</dep></entry>
            <entry><ind>100</ind><dep>0.0385</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>VSI.needle</object-name>
        <property>velocities/vertical-speed-fps</property>
        <interpolation>
            <entry><ind>-100</ind><dep>-60.0</dep></entry>
            <entry><ind>-33.3333</ind><dep>-50.0</dep></entry>
            <entry><ind>-16.6666</ind><dep>-34.0</dep></entry>
            <entry><ind>16.6666</ind><dep>34.0</dep></entry>
            <entry><ind>33.3333</ind><dep>50.0</dep></entry>
            <entry><ind>100</ind><dep>60.0</dep></entry>
        </interpolation>
        <center>
            <x-m>0.002</x-m>
            <y-m>0.082</y-m>
            <z-m>0.007</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>


    <animation>
        <type>rotate</type>
        <object-name>hdg-bug</object-name>
        <property>autopilot/internal/fdm-heading-bug-error-deg</property>
        <interpolation>
            <entry><ind>-54</ind><dep>-54</dep></entry>
            <entry><ind>0</ind><dep>0</dep></entry>
            <entry><ind>54</ind><dep>54</dep></entry>
        </interpolation>
        <center>
            <x-m>0.002</x-m>
            <y-m>-0.012</y-m>
            <z-m>-0.120</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Roll.needle</object-name>
        <object-name>Slip.needle</object-name>
        <property>orientation/roll-deg</property>
        <center>
            <x-m>0.002</x-m>
            <y-m>-0.011</y-m>
            <z-m>0.009</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>Slip.needle</object-name>
        <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
        <factor>0.0025</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>texmultiple</type>
        <object-name>AI</object-name>
        <transform>
            <property>orientation/pitch-deg</property>
            <subtype>textranslate</subtype>
            <factor>0.00473764</factor>
            <axis>
                <x>0</x>
                <y>1</y>
            </axis>
        </transform>
        <transform>
            <property>orientation/roll-deg</property>
            <subtype>texrotate</subtype>
            <center>
                <x>0.25</x>
                <y>0.50</y>
            </center>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </axis>
        </transform>
    </animation>

    <animation>
        <type>texrotate</type>
        <object-name>Hsi</object-name>
        <property>orientation/heading-magnetic-deg</property>
        <center>
            <x>0.75</x>
            <y>0.75</y>
        </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ASI</object-name>
        <property>velocities/airspeed-kt</property>
        <interpolation>
            <entry><ind>0</ind><dep>0</dep></entry>
            <entry><ind>560</ind><dep>0.7520</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation>

<!-- ALT tape-->

