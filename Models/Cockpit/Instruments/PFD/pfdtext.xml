<?xml version="1.0"?>


<PropertyList>
    <name>PFDtext</name>
    <w-base>256</w-base>
    <h-base>256</h-base>

    <layers>

        <layer>
            <name>SPD annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>3</point-size>
            <color>
                <red>1</red>
                <green>0.3</green>
                <blue>1</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/afds/ap-modes/speed-mode</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-70</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>112</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>ROLL annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>3</point-size>
            <color>
                <red>1</red>
                <green>0.3</green>
                <blue>1</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/afds/ap-modes/roll-mode</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-28</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>112</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>PITCH annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>3</point-size>
            <color>
                <red>1</red>
                <green>0.3</green>
                <blue>1</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/afds/ap-modes/pitch-mode</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>15</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>112</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>ROLL arm annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>3</point-size>
            <color>
                <red>0</red>
                <green>1</green>
                <blue>0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/afds/ap-modes/roll-mode-arm</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-25</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>104</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>PITCH arm annun</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>3</point-size>
            <color>
                <red>0</red>
                <green>1</green>
                <blue>0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/afds/ap-modes/pitch-mode-arm</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>17</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>104</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>FD on</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>4</point-size>
            <color>
                <red>1</red>
                <green>0.3</green>
                <blue>1</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/afds/ap-modes/mode-annunciator</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-30</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>72</offset>
                </transformation>
            </transformations>
        </layer>


        <layer>
            <name>mach</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>0.8</red>
                <green>0.8</green>
                <blue>0.8</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>velocities/mach</property>
                    <format>%0.3f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-118</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-95</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>airspeed</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>8</point-size>
            <color>
                <red>0.8</red>
                <green>0.8</green>
                <blue>0.8</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>velocities/airspeed-kt</property>
                    <format>%03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>-122</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-0.4</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>altitude</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>8</point-size>
            <color>
                <red>0.8</red>
                <green>0.8</green>
                <blue>0.8</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/altimeter/indicated-altitude-ft</property>
                    <format>%05.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>69</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-0.4</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <not>
                    <property>instrumentation/efis/inputs/kpa-mode</property>
                </not>
            </condition>
            <name>inhg</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>0.3</red>
                <green>0.8</green>
                <blue>0.6</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/altimeter/setting-inhg</property>
                    <format>%2.2f IN</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>65</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-95</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <property>instrumentation/efis/inputs/kpa-mode</property>
            </condition>
            <name>kpa</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>0.3</red>
                <green>0.8</green>
                <blue>0.6</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/efis/inhg-kpa</property>
                    <format>%4.1f KPA</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>65</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-95</offset>
                </transformation>
            </transformations>
        </layer>


</layers>

</PropertyList>
