				<blue  type="double">1.0</blue>
			</color>
			<alignment>left-center</alignment>
		</params>
	</overlay>
</model>

<animation>
	<type>select</type>
	<object-name>gear.0.door.open</object-name>
	<condition>
		<greater-than>
			<property>/gear/gear[0]/position-norm</property>
			<value>0</value>
		</greater-than>
	</condition>
</animation>

