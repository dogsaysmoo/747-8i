<path>eicas_gear.ac</path>

<model>
	<path>Aircraft/747-8i/Models/Cockpit/display-number.xml</path>
	<offsets>
		<x-m> 0.007</x-m>
		<y-m>-0.016</y-m>
		<z-m> 0.078</z-m>
	</offsets>
	<overlay>
		<params>
			<property type="string">/gear/gear[0]/tire-pressure-norm</property>
			<format type="string">%3.0f</format>
			<factor>200</factor>
			<character-size type="double">0.007</character-size>
			<color>
				<red   type="double">1.0</red>
				<green type="double">1.0</green>
				<blue  type="double">1.0</blue>
			</color>
			<alignment>right-center</alignment>
		</params>
	</overlay>
</model>

<model>
	<path>Aircraft/747-8i/Models/Cockpit/display-number.xml</path>
	<offsets>
		<x-m> 0.007</x-m>
		<y-m> 0.016</y-m>
		<z-m> 0.078</z-m>
	</offsets>
	<overlay>
