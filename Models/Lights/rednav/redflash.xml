<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>redflash.ac</path>
  
  <animation>
    <type>noshadow</type>
    <object-name>redflash</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>redflash</object-name>
    <spherical type="bool">true</spherical>
  </animation>

  <animation>
    <type>select</type>
    <object-name>redflash</object-name>
    <condition>
		<or>
			<and>
				<property>controls/lighting/nav-lights</property>
	    		<not>
					<property>sim/crashed</property>
	    		</not>
				<greater-than>
					<property>systems/electrical/bus-volts</property>
					<value>24.0</value>
				</greater-than>
			</and>
			<greater-than>
				<property>sim/multiplay/generic/int[7]</property>
				<value>5</value>
			</greater-than>
		</or>
    </condition>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>redflash</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>2</dep>
      </entry>
      <entry>
        <ind>1500</ind>
        <dep>20</dep>
      </entry>
      <entry>
        <ind>3500</ind>
        <dep>25</dep>
      </entry>
      <entry>
        <ind>20500</ind>
        <dep>25</dep>
      </entry>
    </interpolation>
  </animation>

</PropertyList>
