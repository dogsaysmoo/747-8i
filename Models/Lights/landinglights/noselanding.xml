<?xml version="1.0"?>
<PropertyList>

      <path>noselanding.ac</path>

      <animation>
            <type>noshadow</type>
            <object-name>CTRLND.flare</object-name>
      </animation>
      
      <animation>
            <type>alpha-test</type>
            <alpha-factor>0.01</alpha-factor>
      </animation>
      
      <animation>
            <type>select</type>
            <object-name>CTRLND.flare</object-name>
            <condition>
            	<!--or-->
                  <and>
			<or>
                              <property>controls/lighting/landing-lights[0]</property>
			      <property>controls/lighting/taxi-lights</property>
			</or>
                        <not>
                              <property>sim/crashed</property>
                        </not>
                        <greater-than>
                              <property>gear/gear[0]/position-norm</property>
                              <value>0.75</value>
                        </greater-than>
                        <greater-than>
                              <property>systems/electrical/bus-volts</property>
                              <value>24.0</value>
                        </greater-than>
                  </and>
                  <!--and>
                        <greater-than>
			                  <property>sim/multiplay/generic/int[5]</property>
                              <value>5</value>
                        </greater-than>
                        <greater-than>
                              <property>gear/gear[0]/position-norm</property>
                              <value>0.75</value>
                        </greater-than>
                  </and>
				</or-->
            </condition>
      </animation>
      
    <animation>
        <type>flash</type>
        <object-name>CTRLND.flare</object-name>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <power>10</power>
        <factor>2</factor>
        <offset>0</offset>
        <two-sides type="bool">false</two-sides>
        <min>1</min>
        <max>5</max>
    </animation>
      
