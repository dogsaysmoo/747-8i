<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

  <path>luminosidade.ac</path>

<!-- ######### -->
<!-- Animacoes -->
<!-- ######### -->

<!--
	
	<bus>
    <name>Master Bus</name>

    adicione as linhas
	
    <prop>/systems/electrical/outputs/landing-light[0]</prop>
    <prop>/systems/electrical/outputs/landing-light[1]</prop>
    <prop>/systems/electrical/outputs/landing-light[2]</prop>

    Depois devera existir um botao para controlar a propertie que liga e desliga
    as luzes. Essa propertie e a 
    
    controls/switches/landing-lights
    
-->    
    
	<!-- Luminosidade do trem DIREITA -->	
    <animation>
        <type>select</type>
        <object-name>RHLND.spot</object-name>
        <condition>
            <and>
            	<!--or>
	            	<equals>
	                    <property>controls/switches/landing-lights</property>
	                    <value>true</value>
	            	</equals-->
	            	<equals>
	                    <property>controls/lighting/landing-lights[2]</property>
	                    <value>true</value>
	            	</equals>
            	<!--/or-->
                <greater-than>
                    <property>systems/electrical/outputs/landing-light[2]</property>
                    <value>5</value>
                </greater-than>
                <greater-than>
                    <property>/sim/time/sun-angle-rad</property>
                    <value>1.55</value>
                </greater-than>
            </and>
        </condition>
    </animation>

	<!-- Luminosidade do trem CENTRO -->	
    <animation>
        <type>select</type>
        <object-name>CTRLND.spot</object-name>
        <condition>
            <and>
            	<!--or>
	            	<equals>
	                    <property>controls/switches/landing-lights</property>
	                    <value>true</value>
	            	</equals-->
	            	<equals>
	                    <property>controls/lighting/landing-lights[0]</property>
	                    <value>true</value>
	            	</equals>
            	<!--/or-->
                <greater-than>
                    <property>systems/electrical/outputs/landing-light[0]</property>
                    <value>5</value>
                </greater-than>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>1.0</value>
                </equals>
                <greater-than>
                    <property>/sim/time/sun-angle-rad</property>
                    <value>1.55</value>
                </greater-than>
            </and>
        </condition>
    </animation>

    
	<!-- Luminosidade do trem ESQUERDA -->	
    <animation>
        <type>select</type>
        <object-name>LHLND.spot</object-name>
        <condition>
            <and>
            	<!--or>
	            	<equals>
	                    <property>controls/switches/landing-lights</property>
	                    <value>true</value>
	            	</equals-->
	            	<equals>
	                    <property>controls/lighting/landing-lights[1]</property>
	                    <value>true</value>
	            	</equals>
            	<!--/or-->
                <greater-than>
                    <property>systems/electrical/outputs/landing-light[1]</property>
                    <value>5</value>
                </greater-than>
                <greater-than>
                    <property>/sim/time/sun-angle-rad</property>
                    <value>1.55</value>
                </greater-than>
            </and>
        </condition>
    </animation>
    
  <!-- Une ombre pour OSG en attendant mieux ;) base sur l'ombre du DC 3-->
  <!-- pitch -->
  <animation>
    <type>rotate</type>
        <object-name>RHLND.spot</object-name>
        <object-name>LHLND.spot</object-name>
        <object-name>CTRLND.spot</object-name>
    <property>orientation/pitch-deg</property>
    <factor> -1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
        <object-name>RHLND.spot</object-name>
        <object-name>LHLND.spot</object-name>
        <object-name>CTRLND.spot</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
        <object-name>RHLND.spot</object-name>
        <object-name>LHLND.spot</object-name>
        <object-name>CTRLND.spot</object-name>
   <property>position/altitude-agl-ft</property>
   <factor> -0.3 </factor>
   <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
   </center>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>

      <animation>
            <type>dist-scale</type>
	        <object-name>RHLND.spot</object-name>
	        <object-name>LHLND.spot</object-name>
	        <object-name>CTRLND.spot</object-name>
            <interpolation>
                  <entry>
                        <ind> 0 </ind>
                        <dep> 1 </dep>
                  </entry>
                  <entry>
                        <ind> 20 </ind>
                        <dep> 1.5 </dep>
                  </entry>
                  <entry>
                        <ind> 1500 </ind>
                        <dep> 15.00 </dep>
                  </entry>
            </interpolation>
      </animation>
      

</PropertyList>
